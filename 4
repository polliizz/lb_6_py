def main():
    try:
        points = int(input("Кількість набраних очок (0-50): "))
        if points < 0 or points > 100:
            raise ValueError("Кількість очок повинна бути в межах від 0 до 50.")
        if points < 50:
            rating = "Початківець"
            multiplier = 1
        elif points < 70:
            rating = "Срібний гравець"
            multiplier = 1.5
        elif points < 90:
            rating = "Золотий гравець"
            multiplier = 2
        else:
            rating = "Платиновий гравець"
            multiplier = 3
        final_points = int(points * multiplier)
        print(f"Ваш рейтинг: {rating}. Ви отримали {final_points} балів (множник ×{multiplier}).")
    except ValueError as e:
        print(e)
    finally:
        print("Дякуємо за гру")
